<%= form_with(model: appointment) do |form| %>
  <% if appointment.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>

      <ul>
        <% appointment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    
  <%= form_with model: @role do |form| %>
    <div class="field">    
      <%= form.label :Doctor_ID %><br>
      <%= form.collection_select :role_id, User.all.where(role: 1), :id, :role%><br>
    </div>

    <div class="field">    
      <%= form.label :Patient_ID %><br>
      <%= form.collection_select :role_id, Role.where(role: "Patient"), :id, :role%><br>
    </div>
  <% end %>   
    
  
  <div>
    <%= form.label :patient_id, style: "display: block" %>
    <%= form.number_field :patient_id %>
  </div>

  <div>
    <%= form.label :appointment_date, style: "display: block" %>
    <%= form.datetime_field :appointment_date %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.text_field :status %>
  </div>

  <div>
    <%= form.label :slot_id, style: "display: block" %>
    <%= form.number_field :slot_id %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :hospital_id, style: "display: block" %>
    <%= form.number_field :hospital_id %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
