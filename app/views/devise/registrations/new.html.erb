<h1><%= t('.sign_up') %></h1>
<div class="row">
  <div class="col-9">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= bootstrap_devise_error_messages! %>

      <div class="form-group">
        <%= f.label :username %>
        <%= f.text_field :username, autofocus: true, autocomplete: 'username', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :age %>
        <%= f.number_field :age, autofocus: true, autocomplete: 'age', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control' %>

        <% if @minimum_password_length %>
          <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: 'current-password', class: 'form-control' %>
      </div>
      <div class="row">
        <div class="field">    
          <%= f.label :gender %></br>
          <span class="option">Male<span><%= f.radio_button :gender, "M" %></br>
          <span class="option">Female<span><%= f.radio_button :gender, "F" %></br>
        </div>

        <div class="field">    
          <%= f.label :role %></br>
          <span class="option">Administrator<span><%= f.radio_button :role, "Administrator" %></br>
          <span class="option">Doctor<span><%= f.radio_button :role, "Doctor" %></br>
          <span class="option">Patient<span><%= f.radio_button :role, "Patient" %></br>
        </div>

        <div class="field">    
          <%= f.label :designation %></br>
          <span class="option">Cardiologist<span><%= f.radio_button :designation, "Cardiologist" %></br>
          <span class="option">Neurologist<span><%= f.radio_button :designation, "Neurologist" %></br>
          <span class="option">General<span><%= f.radio_button :designation, "General" %></br>
        </div>

        <div class="field">
          <%= f.label :hospital %><br>
          <%= f.collection_select :hospital_id, Hospital.all, :id, :name %>
        </div>
      </div>

      <div class="form-group">
        <%= f.submit t('.sign_up'), class: 'btn btn-primary' %>
      </div>
    <% end %>

    <%= render 'devise/shared/links' %>
  </div>
</div>